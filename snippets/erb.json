{
  "if": {
    "prefix": "if",
    "body": ["<% if ${1:truevalue} %>", "  $0", "<% end %>"],
    "description": "if .. end"
  },
  "else": {
    "prefix": "else",
    "body": ["<% else %>"],
    "description": "else"
  },
  "elsif": {
    "prefix": "elsif",
    "body": ["<% elsif ${0:truevalue} %>"],
    "description": "elsif"
  },
  "end": {
    "prefix": "end",
    "body": ["<% end %>"],
    "description": "end"
  },
  "ife": {
    "prefix": "ife",
    "body": ["<% if ${1:truevalue} %>", "  $0", "<% else %>", "<% end %>"],
    "description": "if .. else .. end"
  },
  "unless": {
    "prefix": "unless",
    "body": ["<% unless ${1:falsevalue} %>", "  $0", "<% end %>"],
    "description": "unless .. end"
  },
  "unlesse": {
    "prefix": "unlesse",
    "body": ["<% unless ${1:falsevalue} %>", "  $0", "<% else %>", "<% end %>"],
    "description": "unless .. end"
  },
  "each": {
    "prefix": "each",
    "body": ["<% ${1:items}.each do |${2:item}| %>", "  $0", "<% end %>"],
    "description": "each do"
  },
  "render": {
    "prefix": ["pe", "="],
    "body": ["<%= $0 %>"],
    "description": "render block pe"
  },
  "exec": {
    "prefix": ["er", "%"],
    "body": ["<% $0 %>"],
    "description": "erb exec block"
  }
}
